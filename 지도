import pandas as pd

df = pd.read_csv('./data/골목상권현황.csv',  encoding = 'cp949')
df.head()

#!pip install folium
import folium

## 지도 생성 ##
m = folium.Map(location = [37.2410864,127.1775537],
               zoom_start=12)
m

## 마커 추가 ##
for i in range(len(df)):
    lat = df.loc[i, '위도']
    long = df.loc[i, '경도']
    name = df.loc[i,'상권명']

    folium.Marker([lat, long],tooltip= name).add_to(m)    
m
